{
    "compilerOptions": {
        "target": "ES2017",
        "moduleResolution": "Node",
        "module": "ESNext",
        "lib": ["ES2017", "DOM"],
        "outDir": "./dist",
        "rootDir": "./",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true
    },
    "include": ["./server/**/*.ts", "./db/**/*.ts"],
    "exclude": ["node_modules", "dist"]
}